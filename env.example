# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# SendGrid Configuration
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@prop-shop.ai
SENDGRID_FROM_NAME=PropShop AI

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_random
JWT_EXPIRES_IN=30m
JWT_REFRESH_EXPIRES_IN=7d

# App Configuration
NEXT_PUBLIC_APP_URL=https://propshop.ai
NEXT_PUBLIC_APP_NAME=PropShop AI
NEXT_PUBLIC_APP_VERSION=1.0.0

# Email Templates
EMAIL_VERIFICATION_TEMPLATE_ID=your_sendgrid_template_id_for_verification
PASSWORD_RESET_TEMPLATE_ID=your_sendgrid_template_id_for_password_reset
ADMIN_INVITATION_TEMPLATE_ID=your_sendgrid_template_id_for_admin_invitation

# Security Configuration
SESSION_TIMEOUT_MINUTES=30
MAX_LOGIN_ATTEMPTS=5
LOGIN_ATTEMPT_TIMEOUT_MINUTES=15
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true

# GitHub OAuth (if needed)
GITHUB_ID=your_github_oauth_app_id
GITHUB_SECRET=your_github_oauth_app_secret

# Vercel Configuration
VERCEL_URL=your_vercel_deployment_url

# Cron Job Security
CRON_SECRET=your_secure_cron_secret_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Development Configuration
NODE_ENV=development
NEXT_PUBLIC_DEBUG_MODE=false
